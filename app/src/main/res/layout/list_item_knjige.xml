<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/ScreenPadding"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/tvKnjigaNaslov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/naslovKnjigeTextSize"
            tools:text="Naslov knjige" />

        <TextView
            android:id="@+id/tvKnjigaAutorIme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Ime Autora" />

        <TextView
            android:id="@+id/tvKnjigaAutorKlasifikacijaNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="PodrucjeKnjige" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvKnjigaGodinaIzdanja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="1993" />

        <ImageView
            android:id="@+id/ivKnjigaIsIznajmljena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_available" />
    </LinearLayout>
</LinearLayout>