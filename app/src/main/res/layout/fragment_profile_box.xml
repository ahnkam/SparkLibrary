<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">


            <!-- Cover Image -->

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:background="@drawable/profilebg" />

            <!-- Round image -->

            <ImageView
                android:id="@+id/banar1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="75dp"
                android:background="@mipmap/ic_profile_detalji_icon"
                android:scaleType="fitXY" />


        </FrameLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person_name" />

            <TextView
                android:id="@+id/tvKorisnikImePrezime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Petar LukiÄ‡"
                android:textSize="@dimen/clan_detalji_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clanskibroj" />

            <TextView
                android:id="@+id/tvKorisnikKorisnickoIme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="plukic"
                android:textSize="@dimen/clan_detalji_font_size" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>