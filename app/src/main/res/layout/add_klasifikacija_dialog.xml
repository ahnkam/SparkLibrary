<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFBB33"
        android:text="@string/AddKlasifikacijaDialogTitle"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="16dp" />

    <EditText
        android:id="@+id/etDialogKlasifikacijaNaziv"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/hintDialogKlasifikacijaNaziv"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvAddKlasifikacijaWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="*That classification already exists!"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout>